@model ICollection<Ticket>

<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-black ml-0 py-4 d-flex justify-content-between" style="background: linear-gradient(to left, #1c2d85,#2d1f7d);">
            <div class="row px-2">
                <div class="col-12 ">
                    <h5 class="pt-2 text-white">
                        Shopping Cart
                    </h5>
                </div>

            </div>
            <a href="/Customer/Carts/UserOrders" class="text-white btn btn-outline-secondary"><i class="bi bi-card-checklist nav-icon"> Tickets History</i></a>
        </div>
        <div class="card-body my-4">
            <div class="row">
            </div>
            <div class="row mb-3 pb-3">
                <div class="col-md-2 offset-md-1">
                    <a href="/Customer/home/index" class="btn btn-outline-primary text-uppercase mb-5 btn-sm"><small>Continue Shopping</small></a>
                </div>
                <div class="col-md-10 offset-md-1">


                    @foreach (var item in Model)
                    {
                        <div class="row border-bottom pb-3">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                <img src="~/images/movies//@item.Movie.ImgUrl" class="rounded" width="100%" />
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h5 class="text-uppercase text-secondary"><strong>@item.Movie.Name</strong></h5>
                                <p><small>@item.Movie.Description</small></p>
                            </div>
                            <div class="col-12  col-lg-5 text-center row">
                                <div class="col-3 text-md-right pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        @item.Movie.Price.ToString("c")
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@item.Quantity
                                    </h6>
                                </div>
                                <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                    <div class="w-75 btn-group" role="group">
                                        <a href="/Customer/Carts/Increment?Id=@item.Id" class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="bi bi-plus-square"></i>
                                        </a> &nbsp;
                                        <a href="/Customer/Carts/Decrement?Id=@item.Id" class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="bi bi-dash-square"></i>
                                        </a>
                                    </div>

                                </div>
                                <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                    <a href="/Customer/Carts/DeleteTicket?id=@item.Id" class="btn btn-danger bg-gradient py-2 ">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>

                        </div>

                    }



                </div>
            </div>
            <div class="card-footer border-0 p-3 bg-dark bg-opacity-10 ">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4 bg-dark bg-opacity-10 rounded p-2">
                            <li class="d-flex justify-content-between align-items-center ">
                                <h5 class="text-dark fw-semibold text-uppercase"> (EGP)</h5>
                                <h4 class="text-dark fw-bolder">@ViewBag.Total $$</h4>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        <a href="/Customer/Carts/Pay" class="btn btn-primary border-0  w-100 py-2" style="background: linear-gradient(to left, #18409e,#2d1f7d);">Summary</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>