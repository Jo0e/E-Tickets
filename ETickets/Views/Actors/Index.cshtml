@model Actor
<div class="card" style="width: 100%;">
    <div class="card-body">
        <img src="/images/cast/@Model.ProfilePicture" width="60" /> <br />
        <h4>@Model.FirstName @Model.LastName</h4>
        <hr />
        <div class="card-body">
            <p class="card-text"> <strong>Bio </strong> :@Model.Bio</p>
            <p class="card-text"> <strong>News </strong>: @Model.News</p>
        </div>
        <a href="">Social Media</a>
    </div>
</div>