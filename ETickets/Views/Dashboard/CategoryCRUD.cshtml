@model IEnumerable<ETickets.Models.Category>

@{
    ViewData["Title"] = "CategoryCRUD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between">
    <h1>CategoryCRUD</h1>
    <h1 class="text-center"><a href="/Dashboard/index"><i class="bi bi-arrow-left-circle" style="color:#2c377d;"></i> </a> </h1>
</div>
<hr />
<p class="flex-column">
    <form asp-action="CategoryCRUD" class="d-flex">
        <div class="col-2">
            <a asp-controller="Category" asp-action="Create" class="btn btn-outline-light ">Create New</a>
        </div>
        <input type="text" class="form-control me-3" id="movieSearch" name="Name" aria-label="Search for Category..." placeholder="Search for category..." required />
        <button type="submit" class="btn btn-light"><i class="bi bi-search"></i></button>
    </form>
</p>
<hr />
@if (TempData["NotFound"] != null)
{
    <div class="error-inner ">
        <h1 class="text-center reglar-text" style="font-size:6rem;"><i class="bi bi-patch-exclamation"></i></h1>
    </div>
    <h3 class="text-center reglar-text">@TempData["NotFound"]</h3>
    <hr />
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
